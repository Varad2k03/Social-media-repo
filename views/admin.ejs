    <div class="login">
        <form action="./admin" method="post" class="login__form">
            <h1 class="login__title">Login</h1>

            <div class="login__inputs">
                <div class="login__box">
                    <input type="text" name="name" placeholder="Name" required class="login__input">
                    <i class="fa-regular fa-envelope"></i>
                </div>

                <div class="login__box">
                    <input type="password" name="password" placeholder="Password" required class="login__input">
                    <i class="fa-solid fa-lock"></i>
                </div>


            </div>

            <div class="login__check">
                <div class="login__check-box">
                    <input type="checkbox" class="login__check-input" id="user-check">
                    <label for="user-check" class="login__check-label">Remember me</label>
                </div>

                <a href="#" class="login__forgot">Forgot Password?</a>
            </div>

            <button type="submit" onclick="loginAsAdmin()" class="login__button">Login</button>

            <div class="login__register">
                Don't have an account? <a href="./signup">Register</a>
            </div>
            <div class="dropdown">
                <button class="dropbtn">Login as</button>
            </div>
        </form>
    </div>

</body>

<script>
    // Define a function to handle the form submission
    function loginAsAdmin() {
        // Get the input values
        const username = document.querySelector('input[name="name"]').value;
        const password = document.querySelector('input[name="password"]').value;

        // Check if the username and password match the specific user's credentials
        if (username === 'admin@sggs.in' && password === 'admin') {
            // If credentials match, redirect the user to the admin page
            window.location.href = './home'; // Redirect to the admin page
        } else {
            // If credentials do not match, display an error message
            alert('Invalid username or password');
            // You can add more sophisticated error handling here, such as displaying an error message on the page
        }
    }

    // Add an event listener to the form submission
    document.querySelector('.login__form').addEventListener('submit', function (event) {
        // Prevent the default form submission behavior
        event.preventDefault();
        // Call the loginAsAdmin function to handle the login process
        loginAsAdmin();
    });


</script>

</html>